# Scholarly Platform Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL="postgresql://scholarly:scholarly_dev@localhost:5432/scholarly_dev?schema=public"

# =============================================================================
# API SERVER
# =============================================================================
PORT=3001
NODE_ENV=development

# CORS (comma-separated origins)
CORS_ORIGINS="http://localhost:3000,http://localhost:3001"

# =============================================================================
# AUTHENTICATION
# =============================================================================
# JWT secret for token signing (generate with: openssl rand -base64 32)
JWT_SECRET="your-jwt-secret-change-in-production"
JWT_EXPIRY="7d"

# Demo mode (allows simplified authentication for development)
DEMO_MODE=true

# =============================================================================
# NEXT.JS FRONTEND
# =============================================================================
NEXT_PUBLIC_API_URL="http://localhost:3001"
NEXT_PUBLIC_APP_NAME="Scholarly"
NEXT_PUBLIC_APP_DESCRIPTION="The Unified Learning Nexus"

# =============================================================================
# AUSTRALIAN CURRICULUM (MRAC)
# =============================================================================
CURRICULUM_SOURCE_PATH="./scholarly-project-files/Australian Curriculum"
CURRICULUM_DEFAULT_FRAMEWORK="ACARA-v9"

# =============================================================================
# STORAGE (for content marketplace)
# =============================================================================
# Use local file storage in development
STORAGE_PROVIDER="local"
STORAGE_LOCAL_PATH="./uploads"

# For production, use cloud storage:
# STORAGE_PROVIDER="gcs"
# GCS_BUCKET_NAME="scholarly-content"
# GCS_PROJECT_ID="your-project-id"
# GOOGLE_APPLICATION_CREDENTIALS="./service-account.json"

# =============================================================================
# EMAIL (for notifications)
# =============================================================================
# SMTP_HOST="smtp.example.com"
# SMTP_PORT=587
# SMTP_USER="your-smtp-user"
# SMTP_PASS="your-smtp-password"
# EMAIL_FROM="Scholarly <noreply@scholarly.app>"

