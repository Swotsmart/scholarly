# Next.js Frontend Environment Variables
# Copy to .env.local for local development

# API endpoint (proxied through Next.js rewrites in dev)
NEXT_PUBLIC_API_URL=""

# App branding
NEXT_PUBLIC_APP_NAME="Scholarly"
NEXT_PUBLIC_APP_DESCRIPTION="The Unified Learning Nexus - AI-Powered Education Platform"

# Feature flags
NEXT_PUBLIC_ENABLE_DEMO_LOGIN=true
NEXT_PUBLIC_ENABLE_CURRICULUM_BROWSER=true
NEXT_PUBLIC_ENABLE_HOMESCHOOL_HUB=true
NEXT_PUBLIC_ENABLE_RELIEF_MARKETPLACE=true
