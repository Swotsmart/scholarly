# =============================================================================
# Scholarly Platform - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in the values for your environment.
# NEVER commit .env files to version control.
# =============================================================================

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
NODE_ENV=development
PORT=3000
API_VERSION=v1
LOG_LEVEL=debug

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
DATABASE_URL="postgresql://scholarly:scholarly_dev_password@localhost:5432/scholarly_dev?schema=public"
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# -----------------------------------------------------------------------------
# Redis (Caching, Rate Limiting, Sessions)
# -----------------------------------------------------------------------------
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=
REDIS_TLS_ENABLED=false

# -----------------------------------------------------------------------------
# Authentication
# -----------------------------------------------------------------------------
JWT_SECRET=your-256-bit-secret-key-change-in-production-minimum-32-characters
JWT_ISSUER=scholarly
JWT_AUDIENCE=scholarly-api
JWT_ACCESS_TOKEN_EXPIRES_IN=15m
JWT_REFRESH_TOKEN_EXPIRES_IN=7d

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
BCRYPT_ROUNDS=12

# -----------------------------------------------------------------------------
# AI Services (Optional)
# -----------------------------------------------------------------------------
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
AI_DEFAULT_PROVIDER=anthropic
AI_DEFAULT_MODEL=claude-sonnet-4-20250514

# -----------------------------------------------------------------------------
# Azure Cognitive Services (Pronunciation - Optional)
# -----------------------------------------------------------------------------
AZURE_SPEECH_KEY=
AZURE_SPEECH_REGION=australiaeast

# -----------------------------------------------------------------------------
# Monitoring & Observability
# -----------------------------------------------------------------------------
METRICS_ENABLED=true
METRICS_PORT=9090
TRACING_ENABLED=false
TRACING_ENDPOINT=

# -----------------------------------------------------------------------------
# Email (Optional)
# -----------------------------------------------------------------------------
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@scholarly.chekd.com

# -----------------------------------------------------------------------------
# Storage (Optional)
# -----------------------------------------------------------------------------
S3_BUCKET=
S3_REGION=ap-southeast-2
S3_ACCESS_KEY=
S3_SECRET_KEY=
