{
  "name": "@scholarly/platform",
  "version": "1.0.0",
  "description": "Scholarly Education Platform - Early Years & Language Learning",
  "private": true,
  "workspaces": [
    "packages/*",
    "services/*",
    "apps/*"
  ],
  "scripts": {
    "build": "npm run build:packages && npm run build:services && npm run build:apps",
    "build:packages": "npm run build -w @scholarly/database -w @scholarly/shared -w @scholarly/validation",
    "build:services": "npm run build -w @scholarly/early-years -w @scholarly/linguaflow",
    "build:apps": "npm run build -w @scholarly/api",
    "dev": "npm run dev -w @scholarly/api",
    "test": "jest --coverage",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration --runInBand",
    "test:e2e": "jest --testPathPattern=tests/e2e --runInBand",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"**/*.ts\"",
    "db:generate": "prisma generate --schema=packages/database/prisma/schema.prisma",
    "db:migrate": "prisma migrate dev --schema=packages/database/prisma/schema.prisma",
    "db:migrate:prod": "prisma migrate deploy --schema=packages/database/prisma/schema.prisma",
    "db:seed": "ts-node packages/database/src/seed.ts",
    "db:reset": "prisma migrate reset --schema=packages/database/prisma/schema.prisma --force",
    "docker:build": "docker build -t scholarly-api .",
    "docker:run": "docker-compose up -d",
    "docs:generate": "npx @redocly/cli build-docs docs/openapi.yaml -o docs/index.html"
  },
  "dependencies": {
    "@prisma/client": "^5.10.0",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "rate-limiter-flexible": "^4.0.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "zod": "^3.22.4",
    "uuid": "^9.0.1",
    "pino": "^8.18.0",
    "pino-http": "^9.0.0",
    "prom-client": "^15.1.0",
    "ioredis": "^5.3.2",
    "dotenv": "^16.4.1",
    "http-terminator": "^3.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/uuid": "^9.0.7",
    "typescript": "^5.3.3",
    "prisma": "^5.10.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11",
    "ts-jest": "^29.1.2",
    "supertest": "^6.3.4",
    "@types/supertest": "^6.0.2",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "prettier": "^3.2.4",
    "pino-pretty": "^10.3.1"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
