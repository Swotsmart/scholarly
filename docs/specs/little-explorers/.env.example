# Little Explorers Environment Configuration
# Copy this file to .env and fill in your values

# ==============================================================================
# DATABASE
# ==============================================================================

# PostgreSQL connection string
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/little_explorers"

# ==============================================================================
# CACHE
# ==============================================================================

# Redis connection string
REDIS_URL="redis://localhost:6379"

# ==============================================================================
# AI
# ==============================================================================

# Anthropic API key for AI features
ANTHROPIC_API_KEY="sk-ant-..."

# AI model configuration (optional - defaults shown)
AI_MODEL_REASONING="claude-sonnet-4-20250514"
AI_MODEL_GENERATION="claude-sonnet-4-20250514"
AI_RATE_LIMIT_PER_MINUTE=20

# ==============================================================================
# AUTHENTICATION
# ==============================================================================

# JWT secret for token signing
JWT_SECRET="your-secure-secret-key-change-in-production"

# JWT expiration (default: 7 days)
JWT_EXPIRES_IN="7d"

# ==============================================================================
# APPLICATION
# ==============================================================================

# Server port
PORT=3000

# Node environment
NODE_ENV="development"

# Logging level (error, warn, info, debug)
LOG_LEVEL="info"

# ==============================================================================
# EXTERNAL SERVICES
# ==============================================================================

# Push notification service (OneSignal/Firebase)
# PUSH_SERVICE_APP_ID=""
# PUSH_SERVICE_API_KEY=""

# Email service (SendGrid/SES)
# EMAIL_SERVICE_API_KEY=""
# EMAIL_FROM_ADDRESS="noreply@school.edu"

# SMS service (Twilio)
# TWILIO_ACCOUNT_SID=""
# TWILIO_AUTH_TOKEN=""
# TWILIO_PHONE_NUMBER=""

# Translation service (Google Translate/DeepL)
# TRANSLATION_API_KEY=""

# File storage (S3/GCS)
# STORAGE_BUCKET=""
# STORAGE_REGION=""
# STORAGE_ACCESS_KEY=""
# STORAGE_SECRET_KEY=""

# ==============================================================================
# FEATURE FLAGS
# ==============================================================================

# Enable AI features
FEATURE_AI_SUGGESTIONS=true
FEATURE_AI_INSIGHTS=true
FEATURE_AI_TRANSLATIONS=true
FEATURE_AI_PORTFOLIO_ANALYSIS=true
FEATURE_SAFEGUARDING_MONITOR=true

# Enable premium features
FEATURE_PREMIUM_REPORTS=false
FEATURE_PREMIUM_TRANSLATIONS=false
