# ============================================================================
# SCHOLARLY HOSTING - ENVIRONMENT CONFIGURATION
# ============================================================================
# Copy this file to .env and fill in your values

# ==========================================================================
# APPLICATION
# ==========================================================================
NODE_ENV=development
PORT=3000
LOG_LEVEL=debug
BASE_DOMAIN=scholar.ly

# ==========================================================================
# DATABASE
# ==========================================================================
DATABASE_URL=postgresql://scholarly:your_password@localhost:5432/scholarly_hosting
DB_HOST=localhost
DB_PORT=5432
DB_NAME=scholarly_hosting
DB_USER=scholarly
DB_PASSWORD=your_password
DB_MAX_CONNECTIONS=20

# ==========================================================================
# REDIS
# ==========================================================================
REDIS_URL=redis://localhost:6379

# ==========================================================================
# CORS
# ==========================================================================
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# ==========================================================================
# RATE LIMITING
# ==========================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# ==========================================================================
# SSL/DOMAIN VERIFICATION
# ==========================================================================
ACME_EMAIL=ssl@scholar.ly
ACME_DIRECTORY=https://acme-v02.api.letsencrypt.org/directory
CLOUDFLARE_API_TOKEN=your_cloudflare_token
CLOUDFLARE_ZONE_ID=your_zone_id

# ==========================================================================
# EXTERNAL INTEGRATIONS
# ==========================================================================
MYSCHOOL_API_KEY=your_api_key
VRQA_API_KEY=your_vrqa_key
NESA_API_KEY=your_nesa_key

# ==========================================================================
# EMAIL
# ==========================================================================
SENDGRID_API_KEY=your_sendgrid_key
EMAIL_FROM=noreply@scholar.ly
EMAIL_REPLY_TO=support@scholar.ly

# ==========================================================================
# FILE STORAGE
# ==========================================================================
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_REGION=ap-southeast-2
S3_BUCKET=scholarly-hosting-assets

# ==========================================================================
# AUTHENTICATION
# ==========================================================================
JWT_SECRET=your_jwt_secret_at_least_32_chars
JWT_EXPIRES_IN=7d
AUTH0_DOMAIN=your-domain.auth0.com
AUTH0_CLIENT_ID=your_client_id
AUTH0_CLIENT_SECRET=your_client_secret

# ==========================================================================
# OBSERVABILITY
# ==========================================================================
SENTRY_DSN=your_sentry_dsn
DD_API_KEY=your_datadog_key

# ==========================================================================
# FEATURE FLAGS
# ==========================================================================
FEATURE_AGENT_API=true
FEATURE_OUTCOME_VERIFICATION=true

# ==========================================================================
# TRUST PROXY
# ==========================================================================
TRUST_PROXY=false
