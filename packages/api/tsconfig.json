{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "declaration": true,
    "sourceMap": true,
    "strict": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "src/services/ai",
    "src/services/storybook",
    "src/services/arena",
    "src/services/developer",
    "src/services/mobile",
    "src/services/compliance",
    "src/services/deployment",
    "src/services/ml",
    "src/services/collaboration",
    "src/services/parent",
    "src/services/storage",
    "src/infrastructure"
  ]
}
